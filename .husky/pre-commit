#!/bin/bash
set -e
branch=$(git branch | sed -n -e 's/^\* \(.*\)/\1/p')
if [[ "$branch" == "master" ]] || [[ "$branch" == "development" ]] || [[ "$branch" == "qa" ]] 
then
    echo "cannot commit to major branches" 
    exit 1 
else 
